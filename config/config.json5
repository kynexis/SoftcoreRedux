{
  // --- Hideout Options ---
  "hideoutOptions": {
    // Enable/disable faster bitcoin farming
    "fasterBitcoinFarming": {
      "enabled": true,
      // Set the price of bitcoin in the handbook. Default is 100000. Set to null or remove to not change price.
      "bitcoinPrice": 100000,
      "baseBitcoinTimeMultiplier": 100,
      "gpuEfficiency": 10
    },
    // Enable/disable faster crafting time for all crafts except bitcoin, moonshine, and purified water
    "fasterCraftingTime": {
      "enabled": true,
      "baseCraftingTimeMultiplier": 100,
      "hideoutSkillExpFix": {
        "enabled": true,
        "hideoutSkillExpMultiplier": 10
      },
      "fasterMoonshineProduction": {
        "enabled": true,
        "baseCraftingTimeMultiplier": 10
      },
      "fasterPurifiedWaterProduction": {
        "enabled": true,
        "baseCraftingTimeMultiplier": 10
      },
      "fasterCultistCircle": {
        "enabled": true,
        "baseCraftingTimeMultiplier": 10
      }
    },
    // --- Hideout Containers ---
    "hideoutContainers": {
      "enabled": true,
      // Slightly buffs basic hideout containers: Medicine case 7x7 -> 10x10, Holodilnick 8x8 -> 10x10, Magazine case 7x7 -> 7x10, Item case 8x8 -> 10x10, Weapon case 5x10 -> 6x10, Keytool -> 5x5
      "biggerHideoutContainers": true,
      // Huge QoL buff to SICC case to make it actually not bad and a direct upgrade to Docs. Allows it to hold keytools and more.
      "siccCaseBuff": true
    },
    // --- Fuel Consumption ---
    "fuelConsumption": {
      "enabled": true,
      // Fuel consumption multiplier (higher = more fuel used)
      "fuelConsumptionMultiplier": 10
    },
    // --- Faster Hideout Construction ---
    "fasterHideoutConstruction": {
      "enabled": true,
      // Construction time multiplier (higher = faster construction)
      "hideoutConstructionTimeMultiplier": 100
    },
    // --- Scav Case Options ---
    "scavCaseOptions": {
      "enabled": true,
      // Improves the quality of scav case rewards
      "betterRewards": true,
      // Rebalances the scav case reward pool and recipes
      "rebalance": true,
      // Speed up scav case production
      "fasterScavcase": {
        "enabled": true,
        "speedMultiplier": 10
      }
    },
    // --- Miscellaneous Hideout Options ---
    // Allows to continue gym training with severe muscle pain at 25% efficiency.
    "allowGymTrainingWithMusclePain": true,
    // Disables Found In Raid requirement for hideout upgrades
    "disableFIRHideout": false
  },

    // --- Stash Options ---
  "stashOptions": {
    // Bigger stash option, from 28/38/48/68 to 50/100/150/200 lines.
    "biggerStash": true,
    // Makes every new profile start with LVL1 stash
    "progressiveStash": true,
    // Reduces ridiculous cash requirements for stage construction by a multiplier (e.g. 0.20 = 20% of original cost)
    "lessCurrencyForConstruction": true,
    // Multiplier for stash construction currency requirements (default 0.20 = 20% of original cost)
    "currencyRequirementMultiplier": 0.20,
    // Reduces loyalty level requirements for stage construction (Prapor, Ragman and Peacekeeper) by 1.
    "easierLoyalty": true
  },
  // --- Trader Changes ---
  "traderChanges": {
    // Master toggle for all trader changes
    "enabled": true,
    // Traders buy more items for better prices
    "betterSalesToTraders": true,
    // Traders have alternative buy categories
    "alternativeCategories": true,
    // Pacifist Fence settings
    "pacifistFence": {
      "enabled": true,
      "numberOfFenceOffers": 15
    },
    // Reasonably priced cases
    "reasonablyPricedCases": true,
    // Skier uses Euros
    "skierUsesEuros": false,
    // Bigger buy/sell limits for traders
    "biggerLimits": {
      "enabled": true,
      "multiplier": 2
    }
  },
  // --- Crafting Changes ---
  "craftingChanges": {
    // Major rebalance of crafting recipes balanced around components rarities, usefullness, trader prices and plain "lore" logic. Some nerfs, but a lot of huge buffs. Main idea was to make most of the crafts usefull and/or profitable.
    "enabled": true,
    "craftingRebalance": true,
    // New custom lore-friendly and balanced crafting recipes added for 3-b-TG, Adrenaline, L1, AHF1, CALOK, Ophthalmoscope, Zagustin, Obdolbos, OLOLO.
    "additionalCraftingRecipes": true
  },
  // --- Insurance Changes ---
  "insuranceChanges": {
    "enabled": true,
    // Per-trader insurance settings. You can adjust return chance and price coefficient for each trader.
    "traderInsuranceConfig": {
      "fence": {
        // Chance (percent) to get items back from Fence insurance
        "returnChancePercent": 95,
        // Price coefficient for Fence insurance
        "insurancePriceCoef": 45
      },
      "prapor": {
        // Chance (percent) to get items back from Prapor insurance
        "returnChancePercent": 80,
        // Price coefficient for Prapor insurance
        "insurancePriceCoef": 27
      },
      "therapist": {
        // Chance (percent) to get items back from Therapist insurance
        "returnChancePercent": 50,
        // Price coefficient for Therapist insurance
        "insurancePriceCoef": 15
      }
    },
  },
  // --- Secure Container Options ---
  "secureContainersOptions": {
    "enabled": true, // Master toggle for all secure container options
    // Waist Pouch is 2x4, Alpha is now 3x3 (like EoD), Beta 3x4, Epsilon 3x5, Gamma 4x5, Kappa 5x5
    "biggerContainers": true,
    // Collector quest is startable at level 20 (configurable below). No longer you need all other quests done, only items. BUT, don't think it's going to be easy, there is an additional end-game grind ending condition waiting for you.
    "CollectorQuestLevelStart": 20,
    "progressiveContainers": {
      // Start your NEW profile with just a Waist Pouch 2x2 container, and work all the way up to Gamma with custom container crafts.
      "enabled": true
    }
  },
  // --- Economy Options ---
  "economyOptions": {
    // Master toggle for all economy options below
    "enabled": true,
    // Completely disable flea market for a true HARDCORE experience. Still allows you to use the interface and see trader offers. Overwrites all other flea changes below.
    "disableFleaMarketCompletely": false,
    "priceRebalance": {
      // CORE feature of this mod. Completly removes SPT flea prices snapshot from LIVE, and matches them to internal handbook/traders prices. Everything else is balanced around this. NOT recommended to disable.
      "enabled": true,
      // Fix for important items like intel folder and military flash drive
      "itemFixes": true
    },
    "pacifistFleaMarket": {
      // Only meds, barter items, food and info items can be bought on flea market. Uses hardcoded fleaWhitelist array as filter.
      "enabled": true,
      // Small list of items used in crafts and trader barters is available on flea. Uses hardcoded itemWhitelist array.
      "whitelist": { "enabled": true, "priceMultiplier": 2 },
      // Random-only QUEST keys are available on flea. Uses hardcoded questKeys array.
      "questKeys": { "enabled": true, "priceMultiplier": 2 },
      // Marked keys are available on flea market.
      "markedKeys": { "enabled": true, "priceMultiplier": 2 }
    },
    "barterEconomy": {
      // Only allows to buy items on flea using other random FiR or crafted items. Uses hardcoded fleaBarterBlacklist array as filter for allowed items (meds, barter items, food and info items are enabled, exceptions are stimulants and fuel).
      "enabled": true,
      // Allow small, random percentage of listings to be buyable for cash. 0 is true barter-only economy (except the cheapest items like AA battery, but this is a SPT-AKI limitation).
      "cashOffersPercentage": 8,
      // Â± percent of price variance between item listing and it's barter value. Bigger number - more wild and varied random trades.
      "barterPriceVariance": 40,
      // Max 20 different offers of an item. Too low of a number breaks SPT server for some reason, with constant client errors on completed trades. More random trades variance anyway, this is fun.
      "offerItemCount": { "min": 10, "max": 20 },
      // Max 2 items availiable per individual offer. Feels nice. Loot more stuff, it might come in handy.
      "nonStackableCount": { "min": 1, "max": 2 },
      // Limits maximum number of items asked for barter. Default is 2 for 1 barters max.
      "itemCountMax": 2,
      "unbanBitcoinsForBarters": false
    },
    "otherFleaMarketChanges": {
      // Master Toggle for all other flea market changes below.
      "enabled": true,
      // If option is CHANGED below, it will ALLOW selling on flea market (default is NO SELLING ON FLEA). Will allow you to sell weapons and other blocked by Softcore items like in Vanilla.
      "sellingOnFlea": false,
      // PMC level flea market opens at.
      "fleaMarketOpenAtLevel": 5,
      // Slightly increase flea market prices to stimulate looting and crafting, instead of buying everything on flea.
      "fleaPricesIncreased": 1.3,
      // Only pristine condition items are offered on flea.
      "fleaPristineItems": true,
      // Only found in raid items allowed for barters.
      "onlyFoundInRaidItemsAllowedForBarters": true
    }
  },
  // --- Other Tweaks ---
  "otherTweaks": {
    // Master toggle for all other tweaks
    "enabled": true,
    "skillExpBuffs": true,
    "signalPistolInSpecialSlots": true,
    "unexaminedItemsAreBack": false,
    "fasterExamineTime": false,
    "removeBackpackRestrictions": true,
    "removeDiscardLimit": true,
    "reshalaAlwaysHasGoldenTT": false,
    "biggerAmmoStacks": { "enabled": true, "stackMultiplier": 2, "botAmmoStackFix": true },
    "questChanges": true,
    "removeRaidItemLimits": true,
    "biggerCurrencyStacks": true,
    "currencyStackSizes": {
      // Maximum stack size for each currency type
      "euros": 100000,
      "dollars": 100000,
      "gpcoin": 100,
      "roubles": 1000000
    },
    "smallContainersInSpecialSlots": false
  }
}
  
